# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET           /api/jsRoutes        @controllers.Application.javascriptRoutes
# Security
POST          /api/signup        @controllers.User.signUp
POST          /api/checkAuth        @controllers.User.checkAuth
POST          /api/signIn        @controllers.User.signIn
GET           /api/signOut        @controllers.User.signOut


# Identity
POST          /api/u:userId/identity        @controllers.Identity.add(userId: Int)
GET           /api/u:userId/identity/:id        @controllers.Identity.get(id: Int, userId: Int)
GET           /api/u:userId/identity        @controllers.Identity.list(userId: Int)
PUT           /api/u:userId/identity        @controllers.Identity.update(userId: Int)
DELETE        /api/u:userId/identity/:id        @controllers.Identity.remove(id: Int, userId: Int)
# Account
GET           /api/account/:id        @controllers.Account.getByIdentityId(id: Int)
# BarCode
GET           /api/barcode/get/:content     @controllers.BarCode.getPdf47(content: String)
# Home page
#GET        /                @controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET           /*file        controllers.dev.DAssets.at(path="/public/app", file)
GET           /        controllers.dev.DAssets.at(path="/public/app", file="index.html")