# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET         /api/jsRoutes        @controllers.Application.javascriptRoutes
# Security
POST        /api/signup        @controllers.User.signUp
POST        /api/checkAuth        @controllers.User.checkAuth
POST        /api/signIn        @controllers.User.signIn
GET         /api/signOut        @controllers.User.signOut

# Account
POST        /api/u:userId/account        @controllers.Account.add(userId: Int)
GET         /api/u:userId/account/:id        @controllers.Account.get(id: Int, userId: Int)
GET         /api/u:userId/account            @controllers.Account.list(userId: Int)
# Home page
#GET        /                @controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /*file        controllers.dev.DAssets.at(path="/public/app", file)
GET         /        controllers.dev.DAssets.at(path="/public/app", file="index.html")